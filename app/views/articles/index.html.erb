<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @articles.each do |article| %>
      <div class="col">
        <div class="card h-100">
          <img src="https://fakeimg.pl/600x400" class="card-img-top" alt="Image" />
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-dark" %></h5>
            <p class="card-text text-dark">
              <%= truncate(article.description, length: 100) %>
              </br>
              <%= link_to "View", article_path(article), class: "btn btn-outline-dark" %>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-dark" %>
              <%= link_to "Delete", article_path(article), class: "btn btn-outline-dark", method: :delete, data: { confirm: "Are you sure?" } %>
            </p>
          </div>
          <div class="card-footer">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
          edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

