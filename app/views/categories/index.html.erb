<h1 class="text-center mt-4 text-white">Categories</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @categories.each do |category| %>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-name"><%= link_to category.name, category_path(category), class: "text-light" %></h5>
                </div>
                <div class="card-footer">
                    <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
                    edited <%= time_ago_in_words(category.updated_at) %> ago</small>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>
