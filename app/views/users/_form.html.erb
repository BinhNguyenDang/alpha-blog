<div class="container my-custom-container">
    <%= render 'shared/errors', obj: @user %>
    <div class="form-body">
        <div class="row">
            <div class="form-holder border border-white p-4">
                <div class="form-content">
                    <div class="form-items">
                        <%= form_with(model: @user, local: true, data: {turbo: false })  do |f| %>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.label :username, class: "text-white" %>
                                    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", required: true %>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.label :email, class: "text-white" %>
                                    <%= f.email_field :email, class: "form-control larger-description", placeholder: "Enter email", required: true %>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.label :password, class: "text-white" %>
                                    <%= f.password_field :password, class: "form-control larger-description", placeholder: "Enter password", required: true %>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <div class="form-group">
                                    <%= f.submit class: "btn btn-outline-light mr-2" %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4"> <!-- Added margin top -->
        <%= link_to 'Cancel and return to articles listing', articles_path , class:"btn btn-outline-light"%>
    </div>
</div>

