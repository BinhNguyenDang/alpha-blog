<h1 class="text-center mt-4 text-white"><%= @user.username%>'s profile</h1>

<%= avatar_for @user %>

<div class="text-center mt4">
    <% if logged_in? && @user == current_user %>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-light" %>
    <% end %>
</div>    

<h3 class="text-center mt-4 text-white">Articles</h3>

<div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article' %>

<div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>